{{!--Header--}}
<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <h6 class="navbar-brand" >Movies With Friends</h6>
    
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Logout</a>
        </li>
      </ul>

  </nav>
  
</header>

{{!--Page Container--}}
<div class="container-fluid">
  <div class="row">

    {{!--Sidebar Reddit Forum--}}
    <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
      <h4>Movie Forum</h4>
      <ul class="nav nav-pills flex-column" id="redditData">

      </ul>
    </nav>

     {{!--Main page content--}}
    <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
      <div class="row" id="welcome">
        <div id="screen" class="col-8">
          <img src="/assets/images/movieScreen.jpg" alt="movie screen" class="img-fluid">
          <h1>Welcome <span  id="user">{{user}}</span></h1>
        </div>
      </div>

       {{!--Favorite Movies--}}
      <section class="row text-center placeholders">
        <div class="col-12">
          <h2>Favorite Movies</h2>
        </div>
        <div class="col-sm-1"></div>
        {{#each movies}}
        <div class="col-6 col-sm-2 placeholder">
          <img id="movie{{@index}}" src="http://via.placeholder.com/200x300" width="200" class="img-thumbnail moviePoster" alt="Generic placeholder">
          <h4 class="movieTitle" id="title{{@index}}">{{this}}</h4>
        </div>
        {{/each}}
        <div class="col-sm-1"></div>
      </section>

       {{!--Friends--}}
      <section class="row text-center placeholders">
        
        <div class="col-6 friendList">
          <h2>Suggested Friends</h2>
          {{#each friend}}
          <div class="card" style="width: 20rem;">
            <img class="card-img-top" id="friend{{@index}}" src="" alt="Card image cap">
            <div class="card-body">
              <h6 class="card-title">{{this}}</h6>
            </div>
          </div>
          {{/each}}
        </div>

        <div class="col-6 movieList">
          <h2>Movies in Common with you</h2>
          {{#each inCommonMovies}}
            <h6>{{this}}</h6>
          {{/each}}
        </div>

      </section>

    </main>
  </div>
</div>
